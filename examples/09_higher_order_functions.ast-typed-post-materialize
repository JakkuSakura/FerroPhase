fn printf (fmt : String , args : dyn Any) -> () ;
use std :: fmt :: Display ;
use std :: ops :: Add ;
fn apply < T : Add + Display > (a : T , b : T , op : fn (T , T) -> T) -> (){
    println ! ("{}" , op (a , b)) ;
}
fn add < T : Add > (a : T , b : T) -> T{
    a + b
}
fn apply_if (cond : bool , a : i64 , b : i64 , op : fn (i64 , i64) -> i64) -> i64{
    if cond{
        op (a , b)
    }
    else 0
}
fn make_adder (n : i64) -> impl Fn{
    | x | x + n
}
fn main () -> (){
    printf ("Generic operations:\n" . to_string ()) ;
    apply__spec0 (10 , 20 , add) ;
    apply__spec1 (1.5 , 2.5 , add) ;
    printf ("\nConditional:\n" . to_string ()) ;
    printf ("%d\n" . to_string () , apply_if (true , 5 , 3 , add)) ;
    printf ("%d\n" . to_string () , apply_if (false , 5 , 3 , add)) ;
    printf ("\nClosure factory:\n" . to_string ()) ;
    const add_10 : fn (i64) -> i64 = make_adder (10) ;
    printf ("add_10(5) = %d\n" . to_string () , add_10 (5)) ;
    let double = | x | x * 2 ;
    printf ("double(7) = %d\n" . to_string () , double (7)) ;
}
fn apply__spec0 (a : i64 , b : i64 , op : fn (i64 , i64) -> i64) -> (){
    printf ("%d\n" . to_string () , op (a , b)) ;
}
fn apply__spec1 (a : f64 , b : f64 , op : fn (f64 , f64) -> f64) -> (){
    printf ("%f\n" . to_string () , op (a , b)) ;
}